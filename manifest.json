{
    "manifest_version": 3,
    "name": "Prayer Times New Tab",
    "version": "1.0",
    "description": "Overrides the new tab page with a prayer times display and search/URL bar.",
    "chrome_url_overrides": {
      "newtab": "salahtime.html"
    },
    "permissions": [
      "geolocation",
      "nativeMessaging",
      "alarms"
    ],
    "background": {
      "service_worker": "service-worker.js"
    },
    "icons": {
      "16": "image/favicon-16x16.png",
      "32": "image/favicon-32x32.png",
      "48": "image/favicon-32x32.png",
      "128": "image/apple-touch-icon.png"
    }
  }